<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.BluetoothChat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.android.BluetoothChat.Fau_Picture"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.BluetoothChat.BluetoothMain"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.android.BluetoothChat.BLUETOOTHMAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.BluetoothChat.DogRequest"
            android:label="Dog Request"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.android.BluetoothChat.DOGREQUEST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.BluetoothChat.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.example.android.BluetoothChat.AccessGranted"
            android:configChanges="orientation|keyboardHidden"
            android:label="Access Granted Method" />
        <activity
            android:name="com.example.android.BluetoothChat.AccessDenied"
            android:configChanges="orientation|keyboardHidden"
            android:label="Access Granted Method" />
    </application>

</manifest>